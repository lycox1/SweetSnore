        android:id="@+id/SleepAlarmSettingMenu7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다시 알림 주기"
        app:layout_constraintStart_toStartOf="@+id/SleepAlarmSettingLine7"
        app:layout_constraintTop_toBottomOf="@+id/SleepAlarmSettingLine7"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="7dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>