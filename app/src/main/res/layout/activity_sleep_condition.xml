<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.MorningAlarmSettingActivity">

    <TextView
        android:id="@+id/SleepConditionSettingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잠들기전 컨디션을 설정합니다"
        android:fontFamily="@font/scdream5"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        />

    <View
        android:id="@+id/SleepConditionSettingLine1"
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SleepConditionSettingTitle"
        android:layout_marginTop="32dp"
        android:background="@color/colorGray3"/>

    <TextView
        android:id="@+id/tv_SleepConditionSetting_Menu_OnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평상시"
        app:layout_constraintStart_toStartOf="@+id/SleepConditionSettingLine1"
        app:layout_constraintTop_toBottomOf="@+id/SleepConditionSettingLine1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="7dp"
        android:fontFamily="@font/scdream5"
        android:textSize="14sp"
        android:textColor="@color/colorBLack"
        />

    <CheckBox
        android:id="@+id/swich_SleepConditionSetting_Menu_OnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/SleepConditionSettingLine1"
        app:layout_constraintTop_toBottomOf="@+id/SleepConditionSettingLine1"
        android:layout_marginTop="16dp"
        android:layout_marginRight="7dp"
        android:button="@drawable/checkbox_circle"
        />


</androidx.constraintlayout.widget.ConstraintLayout>